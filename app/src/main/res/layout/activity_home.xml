<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.HomeActivity">

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Title and Bell Icon -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Smart Dorm Shower Queue"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bellIcon"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingEnd="12dp"/>

            <ImageView
                android:id="@+id/bellIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/setting_icon"
                android:contentDescription="Settings"
                app:layout_constraintTop_toTopOf="@id/titleText"
                app:layout_constraintBottom_toBottomOf="@id/titleText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

            <!-- Floor Dropdown -->
            <LinearLayout
                android:id="@+id/floorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floor"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/floorSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Shower Grid (dynamic) -->
            <GridLayout
                android:id="@+id/showerGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="20dp"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/floorLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Refresh / Updated Time -->
            <LinearLayout
                android:id="@+id/updatedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/showerGrid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/refreshIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/refresh_icon"
                    android:contentDescription="Refresh"/>

                <TextView
                    android:id="@+id/updatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated: 10:24 PM"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Reminder Section -->
            <LinearLayout
                android:id="@+id/reminderCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/updatedLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set a Shower Reminder"
                    android:textColor="#7B8A99"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/notifyButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:text="Notify me when a shower is free"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button"/>
            </LinearLayout>

            <!-- History Logs -->
            <LinearLayout
                android:id="@+id/historyCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/reminderCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History Logs :"
                    android:textColor="#2D3B45"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Date"
                                android:textColor="#2D3B45"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Timestamp"
                                android:textColor="#2D3B45"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bathroom No."
                                android:textColor="#2D3B45"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- Rows container (kept id for presenter wiring) -->
                        <LinearLayout
                            android:id="@+id/queueList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation fixed to bottom -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="24dp"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
